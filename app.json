{
  "name": "Multi-Broker Trading Bot",
  "description": "Advanced Automated Trading Bot for Exness and Binance",
  "version": "2.0.0",
  "manifest_version": 3,
  "author": "Trading Bot Team",
  "permissions": [
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Trading Bot"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://api.binance.com/*",
    "https://api.exness.com/*",
    "https://testnet.binance.vision/*"
  ],
  "externally_connectable": {
    "matches": [
      "https://*.exness.com/*",
      "https://*.binance.com/*"
    ]
  }
}
